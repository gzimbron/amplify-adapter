{
	"name": "amplify-adapter",
	"version": "1.3.0",
	"description": "Adapter for SvelteKit v1/v2 + Amplify SSR CI/CD",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gzimbron/amplify-adapter.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"types": "./index.d.ts",
			"import": "./index.js"
		},
		"./package.json": "./package.json"
	},
	"types": "index.d.ts",
	"files": [
		"files",
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"dev": "rimraf files && rolldown -w -c",
		"build": "rimraf files && rolldown -c",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"release": "changeset publish",
		"changeset": "changeset",
		"version:next": "changeset version --tag next",
		"release:next": "pnpm publish --tag next"
	},
	"dependencies": {
		"rolldown": "^1.0.0-rc.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@polka/url": "^1.0.0-next.29",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/node": "^22.0.0",
		"c8": "^10.1.3",
		"polka": "^1.0.0-next.28",
		"prettier": "^3.8.1",
		"rimraf": "^6.1.2",
		"sirv": "^3.0.2",
		"typescript": "^5.9.3",
		"vite": "^6.0.0"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.4.0"
	}
}
